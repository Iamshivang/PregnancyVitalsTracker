<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_bg_box"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_hr"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/hr"/>

                <TextView
                    android:id="@+id/tv_hr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="90 bpm"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:gravity="start"
                    android:textColor="@color/textColor"
                    app:layout_constraintStart_toEndOf="@+id/iv_hr"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_bp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/bp"/>

                <TextView
                    android:id="@+id/tv_bp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="120/80 mmHg"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:gravity="start"
                    android:textColor="@color/textColor"
                    app:layout_constraintStart_toEndOf="@+id/iv_bp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_weight"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/scale"/>

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="80 Kg"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:gravity="start"
                    android:textColor="@color/textColor"
                    app:layout_constraintStart_toEndOf="@+id/iv_weight"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_kicks"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/newborn"/>

                <TextView
                    android:id="@+id/tv_kicks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="10 Kicks"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:gravity="start"
                    android:textColor="@color/textColor"
                    app:layout_constraintStart_toEndOf="@+id/iv_kicks"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/primaryColor"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun,"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:gravity="start"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 July 2025"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:gravity="start"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 am"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:gravity="start"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>